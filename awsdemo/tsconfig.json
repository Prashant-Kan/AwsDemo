{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist/",
        "module": "amd",
        "moduleResolution": "classic",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "newLine": "LF"
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}